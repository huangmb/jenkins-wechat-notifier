    <groupId>com.huangmb.jenkins</groupId>
    <artifactId>wechat-notify</artifactId>
    <version>2.2.1-SNAPSHOT</version>
    <packaging>hpi</packaging>
    <properties>
        <jenkins.version>2.7.3</jenkins.version>
        <java.level>7</java.level>
    </properties>
    <name>Wechat Notify</name>
    <description>wechat notify</description>
    <!--<url>https://wiki.jenkins-ci.org/display/JENKINS/Wechat+Plugin</url>-->
